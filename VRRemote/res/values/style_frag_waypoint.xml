<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="wp_listelement">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">50sp</item>
    	<item name="android:alpha">0.6</item>
    	<item name="android:paddingBottom">20sp</item>
   	</style>
   	
    <style name="wp_textview">
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:layout_width">wrap_content</item>  	
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="wp_header" parent="wp_textview">
    	<item name="android:textColor">#111111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="wp_name" parent="wp_header">
        <item name="android:layout_marginLeft">20sp</item>
    	<item name="android:maxWidth">200dp</item>
    </style>
     
    <style name="wp_coordinats" parent="wp_header">
		<item name="android:layout_marginRight">10sp</item>
    </style>
    
    <style name="wp_description" parent="wp_textview">
    	<item name="android:layout_marginLeft">20sp</item>
    	<item name="android:layout_marginRight">60sp</item>
    	<item name="android:textColor">#222222</item>
        <item name="android:textSize">12sp</item>
    </style>
   
    <style name="wp_button">
		<item name="android:layout_margin">0sp</item>
		<item name="android:layout_toLeftOf">@id/b_wpdelete</item>
		<item name="android:layout_width">70sp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="wp_load" parent="wp_button">
        <item name="android:text">@string/load_Waypoint</item>
    </style>
    
    <style name="wp_delete" parent="wp_button">
        <item name="android:text">@string/delete_Waypoint</item>
    </style>
</resources>